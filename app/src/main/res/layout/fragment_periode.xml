<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color2">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_utama"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/frame_input"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/frame_utama"
        app:layout_constraintVertical_weight="5"
        app:layout_constraintBottom_toTopOf="@id/frameScroll"
        >
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/judul"
            android:layout_height="wrap_content"
            android:text="TAMBAH DATA PERIODE GAJI"
            android:textFontWeight="900"
            android:textStyle="bold"
            android:textSize="10pt"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/frame_input"
            android:layout_marginTop="20sp"
            app:layout_constraintStart_toStartOf="@id/frame_input"
            app:layout_constraintEnd_toEndOf="@id/frame_input"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txPeriode"
            android:layout_height="wrap_content"
            android:text="Periode :"
            android:layout_marginStart="20sp"
            android:textFontWeight="700"
            android:textStyle="bold"
            android:textSize="9pt"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/judul"
            android:layout_marginTop="15sp"
            app:layout_constraintStart_toStartOf="@id/frame_input"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerBulan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toBottomOf="@id/txPeriode"
            app:layout_constraintStart_toStartOf="@id/frame_input"
            android:entries="@array/spinner_array_bulan"
            />
        <Spinner
            android:id="@+id/spinnerTahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toBottomOf="@id/txPeriode"
            app:layout_constraintStart_toEndOf="@id/spinnerBulan"
            android:entries="@array/spinner_array_tahun"
            android:padding="2sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txDari"
            android:layout_height="wrap_content"
            android:text="Dari :"
            android:textSize="9pt"
            android:textFontWeight="700"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/spinnerBulan"
            app:layout_constraintStart_toStartOf="@id/frame_input"
            android:layout_marginTop="15sp"
            android:layout_marginStart="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txKe"
            android:layout_height="wrap_content"
            android:text="Ke :"
            android:textSize="9pt"
            android:textFontWeight="700"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/spinnerBulan"
            app:layout_constraintStart_toEndOf="@id/calendar1"
            android:layout_marginTop="15sp"
            android:layout_marginStart="30sp"/>

        <EditText
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDateFrom"
            android:hint="Tanggal Mulai"
            android:textSize="7pt"
            app:layout_constraintStart_toStartOf="@id/frame_input"
            app:layout_constraintTop_toBottomOf="@id/txDari"
            android:layout_marginStart="20sp"
            android:layout_marginTop="5sp"/>
        <ImageView
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/calendar1"
            android:src="@drawable/periode"
            app:layout_constraintStart_toEndOf="@id/tvDateFrom"
            app:layout_constraintTop_toBottomOf="@id/txDari"
            android:layout_marginStart="3sp"/>
        <EditText
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDateTo"
            android:hint="Tanggal Akhir"
            android:textSize="7pt"
            app:layout_constraintStart_toEndOf="@id/calendar1"
            app:layout_constraintTop_toBottomOf="@id/txKe"
            android:layout_marginStart="30sp"
            android:layout_marginTop="5sp"/>
        <ImageView
            android:layout_width="20sp"
            android:layout_height="wrap_content"
            android:id="@+id/calendar2"
            android:src="@drawable/periode"
            android:layout_marginBottom="1sp"
            app:layout_constraintStart_toEndOf="@id/tvDateTo"
            app:layout_constraintTop_toBottomOf="@id/txKe"
            android:layout_marginStart="3sp"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="3sp"
    android:text="Simpan"
    android:id="@+id/btnsimpan"
    android:backgroundTint="@color/hijau"
    app:layout_constraintTop_toBottomOf="@id/tvDateTo"
    app:layout_constraintStart_toStartOf="@id/frame_input"
    app:layout_constraintEnd_toEndOf="@id/frame_input"
    android:layout_marginTop="15sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintVertical_weight="5"
            android:id="@+id/frameScroll"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/frame_input"
            app:layout_constraintBottom_toBottomOf="parent"
            >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/listScroll"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rviewPeriode"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </androidx.core.widget.NestedScrollView>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>